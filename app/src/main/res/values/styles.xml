<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="loginButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/boton_login</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="forgotPasswordTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="facebookLoginTextView">
        <item name="android:drawableLeft">@drawable/facebook_button</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/facebook_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="signUpTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">#000000</item>
    </style>

</resources>
